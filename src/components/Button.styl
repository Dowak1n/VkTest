.button
  font-family: roboto, serif;
  position: relative;
  display: flex;
  width: 250px;
  align-items: center;
  justify-content: center;
  background: #FF7700;
  color: #FFFFFF;
  border-radius: 16px;
  border: none;
  padding: 16px;
  font-size: 17px;
  font-weight: 500;
  overflow: hidden;
  cursor: pointer;
  outline: none;
  transition: background-color 0.3s ease, transform 500ms cubic-bezier(0, -0.3, 0.5, 1.3);

  &:hover {
    transform: scale(1.05);
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.12);
    opacity: 0;
    transition: opacity 500ms cubic-bezier(0, -0.3, 0.5, 1.3);
    pointer-events: none;
  }

  &:hover .overlay {
    opacity: 1;
  }

  .button-label {
    flex-grow: 1;
    padding: 2px 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    transition: opacity 0.3s ease;
  }

  .loader {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
  }

  .loader svg {
    animation: spin 1s infinite linear;
  }

@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}